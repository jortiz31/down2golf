<div class="row pad-down">
  <div class="large-12 large-centered columns">
    <h2 class="text-center">Golf Courses</h2>
  </div>
</div>

<div class="row">
  <div class="large-6 medium-11 medium-centered small-12 columns">
    <div class="row align-middle">
      <div class="small-7 columns">
        <img class="fixed-image thumbnail" src= "<%= Course.find(1).image %>">
        <%=link_to "See Course", course_path(Course.find(1)), class: 'success medium expanded button' %>
      </div>
      <div class="columns">
        <h3><%= Course.find(1).name.split.map(&:capitalize)*' ' %></h3>
        <h4><i class="fi-compass"> - </i><strong><%= Course.find(1).location.split.map(&:capitalize)*' ' %></strong></h4>
        <h4><i class="fi-dollar-bill"> - </i><strong><%= number_to_currency(Course.find(1).price) %></h4></strong>
        <p>Matches being played: <%= Course.find(1).matches.count %></p>
      </div>
    </div>
  </div>
