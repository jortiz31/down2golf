<% page_header "Conversation" %>

<p>Chatting with
  <%= render 'conversations/participants', conversation: @conversation %>
</p>

<div class="panel panel-default">
  <div class="panel-heading"><%= @conversation.subject %></div>

  <div class="panel-body">
    <div class="messages">
      <% @conversation.receipts_for(current_user).each do |receipt| %>
        <div class="media">
          <% message = receipt.message %>
          <div class="media-left">
            <%= cl_image_tag (message.sender.gravatar.url), :width => 100, :height => 100, :crop => :fill, :gravity => :face %><br>
          </div>
          <div class="media-body">
            <h6 class="media-heading"><%= message.sender.email %>
              says at <%= message.created_at.strftime("%-d %B %Y, %H:%M:%S") %></h6>
            <%= message.body %>
          </div>
        </div>
      <% end %>
      <%= form_tag reply_conversation_path(@conversation), method: :post do %>
        <div class="form-group">
          <%= text_field_tag 'subject', nil, cols: 3, class: 'form-control', placeholder: 'Subject', required: true %>
          <%= text_area_tag 'body', nil, cols: 3, class: 'form-control', placeholder: 'Type something...', required: true %>
        </div>
        <%= submit_tag "Send Message", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
