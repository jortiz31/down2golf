<div class="row">
  <div class="large-8 large-centered columns">

  </div>
</div>

<div class="row">
  <div class="large-11 large-centered columns">
    <div class="row align-middle">
      <div class="columns">
        <img class="course-image" src= "<%= @match.course.image %>">
      </div>
      <div class="columns">
        <h2 class="text-center">Match Name: <small><%= @match.title.capitalize %><br></small></h2>
        <h4 class="text-center">Tee Time / Date: <small><%= @match.date.strftime("%m/%d/%Y")%> / <%= @match.time.strftime("%I:%M:%p") %></small></h4>
        <h4 class="text-center">Course: <small><%= link_to @match.course.name, course_path(@match.course) %></small></h4>
        <% if current_user %>
        <button class="tiny hollow expanded button alert" data-open="commentModal">Comment on Match</button>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="large-11 large-centered columns">
    <div class="row ">
      <div class="large-6 columns">
        <% if @match.comments.length > 0 %>
        <h3><i class="fi-comments"></i>  Comments:</h3>
        <% @match.comments.each do |c| %>
        <h5>Written By: <small><%= c.user.email.capitalize %></small></h5>
        <h5>Comment: <small><%= c.body %></small></h5>
        <% if current_user.id == c.user_id %>
        <%= link_to "Delete Comment", match_comment_path(@match,c), method: :delete, class:"button small warning" %>
        <%= link_to "Edit Comment", edit_match_comment_path(@match,c), class:"button secondary small" %>
        <% end %>
        <% end %>
        <% end %>
      </div>
      <div class="large-6 columns">
        <h4><i class="fi-torsos-all"></i> Users attending: </h4>
        <% @match.users.each do |user| %>
        <small><%= user.email %></small></h3> <% end %> <br>
        <% if !@match.users.include? current_user %>
        <strong><%= link_to 'Join', match_user_join_path(@match, current_user), class:"button primary" %></strong><br>
        <% else %>
        <strong><%= link_to 'Leave', match_user_leave_path(@match, current_user) , class:"button alert"%></strong><br>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="small-12 large-7 medium-8 large-centered medium-centered columns">
  <h5 class="text-center">Company: <%= rating_for @match, "company",disabled_after_rate:true, enable_half:true, readonly:true, imdb_avg: true %></h5>
  <h5 class="text-center">Fun Factor: <%= rating_for @match, "fun_factor",disabled_after_rate:true, enable_half:true, readonly:true, imdb_avg: true %></h5>
  <h5 class="text-center">Competitiveness: <%= rating_for @match, "competitiveness",disabled_after_rate:true, enable_half:true, readonly:true, imdb_avg: true %></h5>
  <h5 class="text-center">Play Again: <%= rating_for @match, "play_again",disabled_after_rate:true, enable_half:true, readonly:true, imdb_avg: true %></h5>
</div>
</div>





<% if current_user %>
<div class="reveal" id="commentModal" data-reveal>
  <%= render 'comments/form' %>
  <button class="close-button" data-close aria-label="Close modal" type="button">
    <span aria-hidden="true">&times;</span>
  </button>
</div><br>
<% end %>
<div class="row">
  <div class="large-6 medium-5 small-12 columns">
    <% if current_user == @match.users.first %>
    <%= link_to "Edit Match", edit_match_path(@match), class:"button secondary small" %><br>
    <%= link_to "Delete Match", match_path(@match), method: :delete, class:"button warning small"%>
    <% end %>
  </div>
</div>
