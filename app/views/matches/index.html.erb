<% @matches.each do |match| %>
<div class="row">
  <div class="medium-6 columns">
    <div class="box">
      <div class="box-icon">
        <span class="fi-telephone"></span>
      </div>
      <div class="info">
        <h4 class="text-center">Title</h4>
        <h3><%= link_to match.title, match %><br></h3>
        Time and Date:<strong><%= match.date.strftime("%m/%d/%Y")%>   <%= match.time.strftime("%H:%M") %></strong><br>
        Course: <strong><%= match.course.name %><br></strong>
        Users Attending:
        <% match.users.each do |u| %>
        <%= link_to u.email, u, class:'button' %><br>
      </div>
    </div>
  </div>
  <% end %>
  <% end %>
</div>













