<div class="row">
  <div class="medium-6 small-11 small-centered medium-centered columns">
    <div class="profile-card">
      <%= cl_image_tag (@user.gravatar.url), :width => 100, :height => 100, :crop => :fill, :gravity => :face %>
      <div class="profile-info">
        <h4 class="subheader"><%= @user.username %></h4>
        <p>Joined On: <%= @user.created_at.strftime("%m/%d/%Y") %></p>
        <p>Email: <%= @user.email %></p>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="large-6 medium-8 small-11 small-centered large-centered medium-centered columns">
    <% if @user.matches.length == 0 %>
    <h4 class="text-center"> <%= @user.username.capitalize %> is not playing in any matches.</h4>
    <% else %>
    <h4 class="text-center"> <%= @user.email.capitalize %> - Matches: <%= @user.matches.count %> </h4>
    <div class="row">
      <table class="hover">
        <thead>
          <tr>
            <th width="200">Match Name:</th>
            <th>Date:</th>
            <th width="150">Time:</th>
            <th width="150">Course:</th>
          </tr>
        </thead>
        <% @user.matches.each do |m| %>
        <tr>
          <td>
            <%= link_to m.title , m %>
          </td>
          <td>
            <%= m.date.strftime("%m/%d/%Y") %>
          </td>
          <td>
            <%= m.time.strftime("%H:%M") %>
          </td>
          <td>
            <%= link_to m.course.name , m.course %> <br>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
<% end %>

<div class="row pad-down">
  <div class="large-9 medium-5 small-9 small-centered large-centered medium-centered columns">
    <div class="callout">
      Humor? <%= rating_for @user, "Humor",disabled_after_rate:true, enable_half:true, readonly:true, imdb_avg: true, star_path: '/images/ratyrate'%>
      Skill Level?<%= rating_for @user, "Skill_level",disabled_after_rate:true, enable_half:true, readonly:true, imdb_avg: true,  star_path: '/images/ratyrate' %>
      Sociability?<%= rating_for @user, "Sociability",disabled_after_rate:true, enable_half:true, readonly:true, imdb_avg: true, star_path: '/images/ratyrate' %>
    </div>
  </div>
</div>
