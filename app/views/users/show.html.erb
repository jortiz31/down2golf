<div class="row">
  <div class="medium-6 small-11 small-centered medium-centered columns">
    <div class="profile-card">
      <%= cl_image_tag (@user.gravatar.url), :width => 100, :height => 100, :crop => :fill, :gravity => :face %>
      <div class="profile-info">
        <h4 class="subheader"><%= @user.username %></h4>
        <p>Joined On: <%= @user.created_at.strftime("%m/%d/%Y") %></p>
        <p>Email: <%= @user.email %></p>
        <ul class="inline-list">
          <li>Humor?<%= rating_for @user, "Humor",disabled_after_rate:true, enable_half:true, readonly:true, imdb_avg: true %></li>
          <li>Skill Level?<%= rating_for @user, "Skill_level",disabled_after_rate:true, enable_half:true, readonly:true, imdb_avg: true %></li>
          <li>Sociability?<%= rating_for @user, "Sociability",disabled_after_rate:true, enable_half:true, readonly:true, imdb_avg: true %></li>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="large-6 medium-8 small-12 large-centered medium-centered columns">
      <% if @user.matches.length == 0 %>
      <h4 class="text-center"> <%= @user.username.capitalize %> is not playing in any matches.</h4>
      <% else %>
      <h4 class="text-center"> <%= @user.username.capitalize %> - Matches: <%= @user.matches.count %> </h4>
      <div class="row">
        <table class="hover">
          <thead>
            <tr>
              <th width="200">Match Name:</th>
              <th>Date:</th>
              <th width="150">Time:</th>
              <th width="150">Course:</th>
            </tr>
          </thead>
          <% @user.matches.each do |m| %>
          <tr>
            <td>
              <%= link_to m.title %>
            </td>
            <td>
              <%= m.date.strftime("%m/%d/%Y") %>
            </td>
            <td>
              <%= m.time.strftime("%H:%M") %>
            </td>
            <td>
              <%= link_to m.course.name  %> <br>
            </td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
  <% end %>
