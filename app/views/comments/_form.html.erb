<% if @course %>
  <%= simple_form_for [@course,@comment] do |f| %>
    <%= f.text_area :body, placeholder: "comment body" %>
    <%= f.submit "Comment on Course!", class: "button warning" %>
  <% end %>
<% elsif @match %>
  <%= simple_form_for [@match,@comment] do |f| %>
    <%= f.text_area :body, placeholder: "comment body"  %>
    <%= f.submit "Comment on Match!" , class:"button warning"%>
  <% end %>
<% end %>
