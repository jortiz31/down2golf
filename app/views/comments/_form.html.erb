<% if @match %>
  <%= simple_form_for [@match,@comment] do |f| %>
    <%= f.text_area :body, placeholder: "comment body" %>
    <%= f.submit "Comment on match!" %>
  <% end %>
<% else %>
  <%= simple_form_for [@course,@comment] do |f| %>
    <%= f.text_area :body, placeholder: "comment body" %>
    <%= f.submit "Comment on course!" %>
  <% end %>
<% end %>
